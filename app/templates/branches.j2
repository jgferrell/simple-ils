{% extends 'page.j2' %}
{% block page_title %}Library Branches{% endblock %}
{% block page_content %}

    <div class="form-wrapper">
	<h3>Add new branch</h3>
	{{ wtf.quick_form(form) }}
    </div>
    
    <h2>Library Branches</h2>
    <table>
	<caption>SQL table: Branches</caption>
	<tbody>
	    <tr>
		<th>id</th>
		<th>parent_system</th>
		<th>code</th>
		<th>name</th>
		<th>address</th>
	    </tr>
	    {% for row in branches %}
		<tr>
		    <td class="mono">{{ row['id'] }}</td>
		    <td class="mono">
			<abbr title="{{ row['parent_system_name'] }}">{{ row['parent_system_code'] }}</abbr>
		    </td>
		    <td class="mono">{{ row['code'] }}</td>
		    <td>{{ row['name'] }}</td>
		    <td>{{ row['address'] }}</td>
		</tr>
	    {% endfor %}
	</tbody>
    </table>

{% endblock %}
