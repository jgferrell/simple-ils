{% extends 'page.j2' %}
{% block title %}Library Systems{% endblock %}
{% block page_content %}

    <div class="form-wrapper">
	<h3>Add new library system</h3>
	{{ wtf.quick_form(form) }}
    </div>
    
    <h2>Library Systems</h2>
    <div id="systems">
        <table>
	    <caption>SQL table: Library_systems</caption>
	    <tbody>
		<tr>
		    <th>id</th>
		    <th>code</th>
		    <th>name</th>
		</tr>
		{% for row in libsystems %}
		    <tr>
			<td class="mono">{{ row['id'] }}</td>
			<td class="mono">{{ row['code'] }}</td>
			<td>{{ row['name'] }}</td>
		    </tr>
		{% endfor %}
	    </tbody>
        </table>
    </div>
	
{% endblock %}
